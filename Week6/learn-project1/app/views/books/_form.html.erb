  <%= form.label :title, 'Title' %>
  <div class="form-field">
    <%= form.text_field :title %>
    <%= display_error_message(@book, :title) %>
  </div>
  <%= form.label :title, 'Author' %>
  <div class="form-field">
    <%= form.select :author_id, Author.all.map { |author| [author.first_name + " " + author.last_name, author.id] } %>
    <%= display_error_message(@book, :author_id) %>
  </div>

  <!-- <%= form.collection_check_boxes:author_id, Author.all, :id, :first_name %> -->

  <%= form.label :title, 'Year published' %>
  <div class="form-field">
    <%= form.number_field :year_published, in: 1500..2023, step: 1 %>
    <!-- <%= date_select("book", "year_published", start_year: 1995, discard_month: true, discard_day: true, include_blank: true) %> -->
    <%= display_error_message(@book, :year_published) %>
  </div>

  <%= form.label :title, 'Price' %>
  <div class="form-field">
    <%= form.number_field :price %>
    <%= display_error_message(@book, :price) %>
  </div>

  <div class="form-field">
    Out of print: 
    <%= form.label :out_of_print, 'Yes' %>
    <%= form.radio_button :out_of_print, 1 %>
    <%= form.label :out_of_print, 'No' %>
    <%= form.radio_button :out_of_print, 0 %>
    <%= display_error_message(@book, :out_of_print) %>
  </div>

  <%= form.label :views, 'Views' %>
  <div class="form-field">
    <%= form.number_field :views, min: 0 %>
    <%= display_error_message(@book, :views) %>
  </div>

  <%= form.label :supplier, 'Supplier' %>
  <div class="form-field">
    <%= form.select :supplier_id, Supplier.all.map { |supplier| [supplier.name, supplier.id] } %>
    <%= display_error_message(@book, :supplier_id) %>
  </div>

  <div class="form-actions">
    <%= form.submit %>
  </div>
  <!-- <%= check_box_tag "accept" %> -->
<% end %>
