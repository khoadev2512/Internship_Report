<div class="col-md-6">
    <%= form_with(model: @something, class: "form form-horizontal") do |form| %>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>
  
      <div class="form-group">
        <%= form.label :body %>
        <%= form.rich_text_area :content %>
      </div>
  
      <div class="form-group">
        <%= form.submit "Save", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>